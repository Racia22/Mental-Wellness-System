@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<section class="login-page">
    <div class="container-fluid px-0">
        <div class="row g-0 min-vh-100">
            <!-- Left blue panel -->
            <div class="col-lg-5 d-none d-lg-flex align-items-center justify-content-center login-left">
                <div class="text-center text-white px-4">
                    <h1 class="display-5 fw-bold mb-3">MENTALWELLNESS</h1>
                    <p class="lead mb-0">
                        Reset your password to regain access to your account.
                    </p>
                </div>
            </div>

            <!-- Right form panel -->
            <div class="col-lg-7 d-flex align-items-center justify-content-center login-right-wrapper">
                <div class="login-right bg-white shadow-sm rounded-4 w-100" style="max-width: 480px;">
                    <h2 class="fw-bold mb-2 text-center">Forgot Password</h2>
                    <p class="text-muted text-center mb-4">Enter your username and email to receive an OTP</p>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="Input.Username" class="form-label">Username</label>
                            <input asp-for="Input.Username" class="form-control form-control-lg" autocomplete="username" />
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Email Address</label>
                            <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                            Send OTP
                        </button>

                        <p class="text-center text-muted mb-0">
                            Remember your password?
                            <a asp-page="./Login">Back to Login</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

