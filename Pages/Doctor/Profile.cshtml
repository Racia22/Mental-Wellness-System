@page
@model MentalWellnessSystem.Pages.Doctor.ProfileModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h4 class="mb-0">Profile Management</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.CurrentUser != null)
                    {
                        <div class="alert alert-info">
                            <strong>User ID:</strong> @Model.CurrentUser.Id
                            <br><small class="text-muted">This ID cannot be changed.</small>
                        </div>
                    }

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Input.FullName" class="form-label">Full Name</label>
                            <input asp-for="Input.FullName" class="form-control" />
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Phone" class="form-label">Phone Number</label>
                            <input asp-for="Input.Phone" class="form-control" />
                            <span asp-validation-for="Input.Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Specialty" class="form-label">Specialty</label>
                            <input asp-for="Input.Specialty" class="form-control" />
                            <span asp-validation-for="Input.Specialty" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="/Doctor/Dashboard" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Update Profile</button>
                        </div>
                    </form>

                    <hr class="my-4" />

                    <div class="d-grid gap-2">
                        <a asp-page="/Doctor/ChangePassword" class="btn btn-outline-primary">
                            <i class="bi bi-key"></i> Change Password
                        </a>
                    </div>
                </div>
            </div>

            <!-- Reviews Section -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-white">
                    <h4 class="mb-0"><i class="bi bi-star"></i> Patient Reviews</h4>
                </div>
                <div class="card-body">
                    @if (Model.Reviews.Any())
                    {
                        <div class="row">
                            @foreach (var review in Model.Reviews)
                            {
                                <div class="col-12 mb-3">
                                    <div class="border rounded p-3">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div>
                                                <strong>@(review.IsAnonymous ? "Anonymous Patient" : review.Patient.FullName)</strong>
                                                <p class="text-muted small mb-0">
                                                    Appointment: @review.Appointment.AppointmentDate.ToString("MMM dd, yyyy") | 
                                                    Submitted: @review.SubmittedAt.ToString("MMM dd, yyyy")
                                                </p>
                                            </div>
                                            <div>
                                                @for (int i = 0; i < review.Rating; i++)
                                                {
                                                    <i class="bi bi-star-fill text-warning"></i>
                                                }
                                                @for (int i = review.Rating; i < 5; i++)
                                                {
                                                    <i class="bi bi-star text-secondary"></i>
                                                }
                                            </div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(review.Comments))
                                        {
                                            <p class="mb-0">@review.Comments</p>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">No reviews yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

