@page
@model MentalWellnessSystem.Pages.Doctor.PatientRecordsModel
@{
    ViewData["Title"] = "Patient Records";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>Patient Records</h2>
        </div>
    </div>

    <!-- Patient Selection -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Select Patient</h5>
                </div>
                <div class="card-body">
                    @if (Model.AllPatients.Any())
                    {
                        <div class="list-group">
                            @foreach (var patient in Model.AllPatients)
                            {
                                <a asp-page="/Doctor/PatientRecords" asp-route-patientId="@patient.Id" 
                                   class="list-group-item list-group-item-action @(Model.Patient?.Id == patient.Id ? "active" : "")">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@patient.FullName</h6>
                                    </div>
                                    @if (!string.IsNullOrEmpty(patient.PatientID))
                                    {
                                        <small class="text-muted">ID: @patient.PatientID</small>
                                    }
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No patients found.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (Model.Patient == null)
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info">
                    Please select a patient from the list above to view their records.
                </div>
            </div>
        </div>
        return;
    }

    <div class="row mb-4">
        <div class="col-12">
            <h3>Patient: @Model.Patient.FullName</h3>
            @if (!string.IsNullOrEmpty(Model.Patient.PatientID))
            {
                <p class="text-muted">Patient ID: @Model.Patient.PatientID</p>
            }
        </div>
    </div>

    <!-- Appointments History -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Appointment History</h5>
                </div>
                <div class="card-body">
                    @if (Model.Appointments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Type</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model.Appointments)
                                    {
                                        <tr>
                                            <td>@appointment.AppointmentDate.ToString("MMMM dd, yyyy")</td>
                                            <td>@appointment.AppointmentTime.ToString("hh:mm tt")</td>
                                            <td>@(appointment.AppointmentType ?? "General Consultation")</td>
                                            <td>
                                                <span class="badge bg-@(appointment.Status == "Scheduled" ? "primary" : appointment.Status == "Ongoing" ? "warning" : appointment.Status == "Completed" ? "success" : "danger")">
                                                    @appointment.Status
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No appointments found.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Patient Records -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Medical Records</h5>
                    <a asp-page="/Doctor/AddPatientRecord" asp-route-patientId="@Model.Patient.Id" class="btn btn-sm btn-primary">
                        Add New Record
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Records.Any())
                    {
                        @foreach (var record in Model.Records)
                        {
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between mb-2">
                                        <small class="text-muted">@record.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")</small>
                                        @if (record.AppointmentId.HasValue)
                                        {
                                            <span class="badge bg-info">From Appointment #@record.AppointmentId</span>
                                        }
                                    </div>
                                    @if (!string.IsNullOrEmpty(record.Notes))
                                    {
                                        <p><strong>Notes:</strong> @record.Notes</p>
                                    }
                                    @if (!string.IsNullOrEmpty(record.Diagnosis))
                                    {
                                        <p><strong>Diagnosis:</strong> @record.Diagnosis</p>
                                    }
                                    @if (!string.IsNullOrEmpty(record.FollowUpRequest))
                                    {
                                        <p><strong>Follow-up:</strong> @record.FollowUpRequest</p>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No records found. <a asp-page="/Doctor/AddPatientRecord" asp-route-patientId="@Model.Patient.Id">Add the first record</a>.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

