@page
@model MentalWellnessSystem.Pages.Doctor.AddPatientRecordModel
@{
    ViewData["Title"] = "Add Patient Record";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Add Patient Record</h4>
                </div>
                <div class="card-body">
                    @if (Model.Patient != null)
                    {
                        <div class="alert alert-info">
                            <strong>Patient:</strong> @Model.Patient.FullName
                            @if (!string.IsNullOrEmpty(Model.Patient.PatientID))
                            {
                                <br><strong>Patient ID:</strong> @Model.Patient.PatientID
                            }
                        </div>
                    }

                    @if (Model.Appointment != null)
                    {
                        <div class="alert alert-info">
                            <strong>Related Appointment:</strong> @Model.Appointment.AppointmentDate.ToString("MMMM dd, yyyy") at @Model.Appointment.AppointmentTime.ToString("hh:mm tt")
                        </div>
                    }

                    <form method="post">
                        <input type="hidden" asp-for="PatientId" />
                        <input type="hidden" asp-for="AppointmentId" />

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Notes" class="form-label"></label>
                            <textarea asp-for="Input.Notes" class="form-control" rows="6" required></textarea>
                            <span asp-validation-for="Input.Notes" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Diagnosis" class="form-label"></label>
                            <textarea asp-for="Input.Diagnosis" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Input.Diagnosis" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.FollowUpRequest" class="form-label"></label>
                            <textarea asp-for="Input.FollowUpRequest" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Input.FollowUpRequest" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="/Doctor/PatientRecords" asp-route-patientId="@Model.PatientId" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Save Record</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

