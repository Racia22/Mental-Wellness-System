@page
@model MentalWellnessSystem.Pages.Doctor.TreatmentPlansModel
@{
    ViewData["Title"] = "Treatment Plans";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-3"><i class="bi bi-clipboard-check"></i> Treatment Plans</h2>
            <a asp-page="/Doctor/AddTreatmentPlan" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Treatment Plan
            </a>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>
    </div>

    <div class="row">
        @if (Model.TreatmentPlans.Any())
        {
            @foreach (var plan in Model.TreatmentPlans)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">@plan.Title</h5>
                            <span class="badge @(plan.Status == "Active" ? "bg-success" : plan.Status == "Completed" ? "bg-info" : "bg-secondary")">
                                @plan.Status
                            </span>
                        </div>
                        <div class="card-body">
                            <p class="text-muted"><strong>Patient:</strong> @plan.Patient.FullName</p>
                            <p class="text-muted"><strong>Start Date:</strong> @plan.StartDate.ToString("MMM dd, yyyy")</p>
                            @if (plan.EndDate.HasValue)
                            {
                                <p class="text-muted"><strong>End Date:</strong> @plan.EndDate.Value.ToString("MMM dd, yyyy")</p>
                            }
                            @if (!string.IsNullOrEmpty(plan.Description))
                            {
                                <p>@plan.Description</p>
                            }
                            @if (!string.IsNullOrEmpty(plan.Goals))
                            {
                                <div class="mt-3">
                                    <strong>Goals:</strong>
                                    <p class="text-muted">@plan.Goals</p>
                                </div>
                            }
                        </div>
                        <div class="card-footer d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                Created: @plan.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy 'at' hh:mm tt")
                            </small>
                            <a asp-page="/Doctor/ViewTreatmentPlan" asp-route-id="@plan.TreatmentPlanId" class="btn btn-sm btn-outline-primary">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No treatment plans created yet.
                </div>
            </div>
        }
    </div>
</div>

