@page
@model MentalWellnessSystem.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<section class="hero-section d-flex align-items-center">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <h1 class="hero-title fw-bold mb-4">
                    Your Journey to Wellness<br />
                    Starts Here
                </h1>
                <p class="lead mb-4 hero-subtitle" style="color: rgba(255, 255, 255, 0.95); font-size: 1.3rem;">
                    Professional therapy services tailored to your unique needs. Book appointments, connect with licensed therapists, and take control of your mental health.
                </p>
                @if (!User.Identity?.IsAuthenticated == true)
                {
                    <a class="btn btn-primary btn-lg px-4 py-2 hero-cta"
                       asp-area="Identity" asp-page="/Account/Register">
                        <i class="bi bi-person-plus"></i> Get Started
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="hero-wave">
        <svg viewBox="0 0 1440 320" preserveAspectRatio="none">
            <path fill="#ffffff" fill-opacity="1"
                  d="M0,224L48,202.7C96,181,192,139,288,106.7C384,75,480,53,576,64C672,75,768,117,864,149.3C960,181,1056,203,1152,186.7C1248,171,1344,117,1392,90.7L1440,64L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z">
            </path>
        </svg>
    </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-white">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="fw-bold mb-3" style="color: var(--text-dark);">Why Choose Mental Wellness System?</h2>
                <p class="text-muted" style="font-size: 1.1rem; color: #6c757d;">Comprehensive mental health care management at your fingertips</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 text-center p-4">
                    <div class="mb-3">
                        <i class="bi bi-calendar-check" style="font-size: 3rem; color: var(--primary-color);"></i>
                    </div>
                    <h4 class="fw-bold mb-3" style="color: var(--text-dark);">Easy Booking</h4>
                    <p class="text-muted" style="color: #6c757d; line-height: 1.7;">Book appointments with licensed therapists in just a few clicks. View available slots and choose what works for you.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 text-center p-4">
                    <div class="mb-3">
                        <i class="bi bi-shield-check" style="font-size: 3rem; color: var(--primary-color);"></i>
                    </div>
                    <h4 class="fw-bold mb-3" style="color: var(--text-dark);">Secure & Private</h4>
                    <p class="text-muted" style="color: #6c757d; line-height: 1.7;">Your data is protected with industry-standard security. All patient records are encrypted and confidential.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 text-center p-4">
                    <div class="mb-3">
                        <i class="bi bi-clock-history" style="font-size: 3rem; color: var(--primary-color);"></i>
                    </div>
                    <h4 class="fw-bold mb-3" style="color: var(--text-dark);">24/7 Access</h4>
                    <p class="text-muted" style="color: #6c757d; line-height: 1.7;">Access your appointment history, download confirmations, and manage your profile anytime, anywhere.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-5" style="background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));">
    <div class="container text-center text-white">
        <h2 class="fw-bold mb-3" style="color: #ffffff; text-shadow: 2px 2px 4px rgba(0,0,0,0.2);">Ready to Begin Your Journey?</h2>
        <p class="lead mb-4" style="color: rgba(255, 255, 255, 0.95); font-size: 1.2rem;">Join thousands of people who have taken the first step towards better mental health.</p>
        @if (!User.Identity?.IsAuthenticated == true)
        {
            <a class="btn btn-light btn-lg px-5" asp-area="Identity" asp-page="/Account/Register">
                Create Your Account
            </a>
        }
    </div>
</section>
