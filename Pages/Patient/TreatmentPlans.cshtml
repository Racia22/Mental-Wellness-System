@page
@model MentalWellnessSystem.Pages.Patient.TreatmentPlansModel
@{
    ViewData["Title"] = "My Treatment Plans";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-3"><i class="bi bi-clipboard-check"></i> My Treatment Plans</h2>
        </div>
    </div>

    <div class="row">
        @if (Model.TreatmentPlans.Any())
        {
            @foreach (var plan in Model.TreatmentPlans)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">@plan.Title</h5>
                            <span class="badge @(plan.Status == "Active" ? "bg-success" : plan.Status == "Completed" ? "bg-info" : "bg-secondary")">
                                @plan.Status
                            </span>
                        </div>
                        <div class="card-body">
                            <p class="text-muted"><strong>Doctor:</strong> Dr. @plan.Doctor.FullName</p>
                            <p class="text-muted"><strong>Start Date:</strong> @plan.StartDate.ToString("MMM dd, yyyy")</p>
                            @if (plan.EndDate.HasValue)
                            {
                                <p class="text-muted"><strong>End Date:</strong> @plan.EndDate.Value.ToString("MMM dd, yyyy")</p>
                            }
                            @if (!string.IsNullOrEmpty(plan.Description))
                            {
                                <p>@plan.Description</p>
                            }
                            @if (!string.IsNullOrEmpty(plan.Goals))
                            {
                                <div class="mt-3">
                                    <strong>Goals:</strong>
                                    <p class="text-muted">@plan.Goals</p>
                                </div>
                            }
                        </div>
                        <div class="card-footer">
                            <a asp-page="/Patient/ViewTreatmentPlan" asp-route-id="@plan.TreatmentPlanId" class="btn btn-sm btn-outline-primary">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No treatment plans available at this time.
                </div>
            </div>
        }
    </div>
</div>
