@page
@model MentalWellnessSystem.Pages.Patient.ViewTreatmentPlanModel
@{
    ViewData["Title"] = "My Treatment Plan";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-3"><i class="bi bi-clipboard-check"></i> My Treatment Plan</h2>
        </div>
    </div>

    @if (Model.TreatmentPlan != null)
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">@Model.TreatmentPlan.Title</h4>
                        <span class="badge @(Model.TreatmentPlan.Status == "Active" ? "bg-success" : Model.TreatmentPlan.Status == "Completed" ? "bg-info" : "bg-secondary")">
                            @Model.TreatmentPlan.Status
                        </span>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <p><strong>Doctor:</strong> Dr. @Model.TreatmentPlan.Doctor.FullName</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Start Date:</strong> @Model.TreatmentPlan.StartDate.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>
                        @if (Model.TreatmentPlan.EndDate.HasValue)
                        {
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <p><strong>End Date:</strong> @Model.TreatmentPlan.EndDate.Value.ToString("MMMM dd, yyyy")</p>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.TreatmentPlan.Description))
                        {
                            <div class="mb-3">
                                <h5>Description</h5>
                                <p>@Model.TreatmentPlan.Description</p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.TreatmentPlan.Goals))
                        {
                            <div class="mb-3">
                                <h5>Goals</h5>
                                <p>@Model.TreatmentPlan.Goals</p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.TreatmentPlan.Tasks))
                        {
                            <div class="mb-3">
                                <h5>Tasks/Exercises</h5>
                                <p>@Model.TreatmentPlan.Tasks</p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.TreatmentPlan.ProgressNotes))
                        {
                            <div class="mb-3">
                                <h5>Progress Notes</h5>
                                <p>@Model.TreatmentPlan.ProgressNotes</p>
                            </div>
                        }
                        <div class="mt-4">
                            <small class="text-muted">
                                Created: @Model.TreatmentPlan.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt") | 
                                Last Updated: @Model.TreatmentPlan.UpdatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            Treatment plan not found.
        </div>
    }
</div>
