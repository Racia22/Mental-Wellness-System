@page
@model MentalWellnessSystem.Pages.Patient.DashboardModel
@{
    ViewData["Title"] = "Patient Dashboard";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0">Welcome, @Model.CurrentUser?.FullName!</h1>
            @if (!string.IsNullOrEmpty(Model.CurrentUser?.PatientID))
            {
                <p class="text-muted">Patient ID: <strong>@Model.CurrentUser.PatientID</strong></p>
            }
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-muted mb-2">Total Appointments</h5>
                    <h2 class="mb-0">@Model.Stats.TotalAppointments</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-muted mb-2">Completed</h5>
                    <h2 class="mb-0">@Model.Stats.CompletedAppointments</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-muted mb-2">Upcoming</h5>
                    <h2 class="mb-0">@Model.Stats.UpcomingAppointments</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2 d-md-flex">
                        <a asp-page="/Patient/BookAppointment" class="btn btn-primary">
                            <i class="bi bi-calendar-plus"></i> Book New Appointment
                        </a>
                        <a asp-page="/Patient/AppointmentHistory" class="btn btn-outline-primary">
                            <i class="bi bi-clock-history"></i> View Appointment History
                        </a>
                        <a asp-page="/Patient/Profile" class="btn btn-outline-secondary">
                            <i class="bi bi-person"></i> Manage Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Appointments -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Upcoming Appointments</h5>
                </div>
                <div class="card-body">
                    @if (Model.UpcomingAppointments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Doctor</th>
                                        <th>Specialty</th>
                                        <th>Type</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model.UpcomingAppointments)
                                    {
                                        <tr>
                                            <td>@appointment.AppointmentDate.ToString("MMMM dd, yyyy")</td>
                                            <td>@appointment.AppointmentTime.ToString("hh:mm tt")</td>
                                            <td>@appointment.Doctor.FullName</td>
                                            <td>@(appointment.Doctor.Specialty ?? "General")</td>
                                            <td>@(appointment.AppointmentType ?? "General Consultation")</td>
                                            <td>
                                                <span class="badge bg-@(appointment.Status == "Scheduled" ? "primary" : appointment.Status == "Ongoing" ? "warning" : "success")">
                                                    @appointment.Status
                                                </span>
                                            </td>
                                            <td>
                                                <a asp-page="/Patient/ViewAppointment" asp-route-id="@appointment.AppointmentId" class="btn btn-sm btn-outline-primary">
                                                    View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">No upcoming appointments. <a asp-page="/Patient/BookAppointment">Book your first appointment</a>!</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

