@page
@model MentalWellnessSystem.Pages.Patient.AppointmentHistoryModel
@{
    ViewData["Title"] = "Appointment History";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>Appointment History</h2>
        </div>
    </div>

    <!-- Appointments Table -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    @if (Model.Appointments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Doctor</th>
                                        <th>Specialty</th>
                                        <th>Type</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model.Appointments)
                                    {
                                        <tr>
                                            <td>@appointment.AppointmentDate.ToString("MMMM dd, yyyy")</td>
                                            <td>@appointment.AppointmentTime.ToString("hh:mm tt")</td>
                                            <td>@appointment.Doctor.FullName</td>
                                            <td>@(appointment.Doctor.Specialty ?? "General")</td>
                                            <td>@(appointment.AppointmentType ?? "General Consultation")</td>
                                            <td>
                                                <span class="badge bg-@(appointment.Status == "Scheduled" ? "primary" : appointment.Status == "Ongoing" ? "warning" : appointment.Status == "Completed" ? "success" : "danger")">
                                                    @appointment.Status
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-page="/Patient/ViewAppointment" asp-route-id="@appointment.AppointmentId" class="btn btn-sm btn-outline-primary">
                                                        View
                                                    </a>
                                                    @if (appointment.Status != "Cancelled" && appointment.Status != "Completed")
                                                    {
                                                        <form method="post" asp-page-handler="Cancel" asp-route-id="@appointment.AppointmentId" class="d-inline" onsubmit="return confirm('Are you sure you want to cancel this appointment?');">
                                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                                Cancel
                                                            </button>
                                                        </form>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">No appointments found.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

