@page
@model MentalWellnessSystem.Pages.Admin.ViewUserProfileModel
@{
    ViewData["Title"] = "User Profile";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>User Profile: @Model.UserProfile?.FullName</h2>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.UserProfile != null)
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Profile Information</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Full Name</dt>
                            <dd class="col-sm-8">@Model.UserProfile.FullName</dd>

                            <dt class="col-sm-4">Email</dt>
                            <dd class="col-sm-8">@Model.UserProfile.Email</dd>

                            <dt class="col-sm-4">Phone</dt>
                            <dd class="col-sm-8">@(Model.UserProfile.Phone ?? "Not provided")</dd>

                            <dt class="col-sm-4">Role</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-@(Model.UserProfile.Role == "Admin" ? "danger" : Model.UserProfile.Role == "Doctor" ? "primary" : "success")">
                                    @Model.UserProfile.Role
                                </span>
                            </dd>

                            <dt class="col-sm-4">Approved</dt>
                            <dd class="col-sm-8">
                                @if (Model.UserProfile.IsApproved)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Pending</span>
                                }
                            </dd>

                            @if (!string.IsNullOrEmpty(Model.UserProfile.Specialty))
                            {
                                <dt class="col-sm-4">Specialty</dt>
                                <dd class="col-sm-8">@Model.UserProfile.Specialty</dd>
                            }

                            @if (!string.IsNullOrEmpty(Model.UserProfile.PatientID))
                            {
                                <dt class="col-sm-4">Patient ID</dt>
                                <dd class="col-sm-8">@Model.UserProfile.PatientID</dd>
                            }

                            <dt class="col-sm-4">Created At</dt>
                            <dd class="col-sm-8">@Model.UserProfile.CreatedAt.ToString("MMMM dd, yyyy")</dd>
                        </dl>
                    </div>
                </div>

                @if (Model.UserDocuments.Any())
                {
                    <div class="card border-0 shadow-sm mt-4">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">Documents</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Title</th>
                                            <th>Type</th>
                                            <th>Uploaded</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var doc in Model.UserDocuments)
                                        {
                                            <tr>
                                                <td>@doc.Title</td>
                                                <td>@doc.DocumentType</td>
                                                <td>@doc.UploadedAt.ToString("MMM dd, yyyy")</td>
                                                <td>
                                                    <a asp-page-handler="DownloadDocument" asp-route-documentId="@doc.DocumentId" class="btn btn-sm btn-primary" onclick="showDownloadPreview('@doc.Title')">
                                                        <i class="bi bi-download"></i> Download
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-page="/Admin/UserManagement" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to User Management
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Document Preview Modal -->
        <div class="modal fade" id="documentPreviewModal" tabindex="-1" aria-labelledby="documentPreviewModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="documentPreviewModalLabel">Document Preview</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div id="documentPreviewContent">
                            <p class="text-center text-muted">Loading document preview...</p>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <a id="downloadLink" href="#" class="btn btn-primary" download>
                            <i class="bi bi-download"></i> Download Document
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            User profile not found.
        </div>
    }
</div>

@section Scripts {
    <script>
        function showDownloadPreview(documentTitle) {
            // Show preview modal after download
            setTimeout(function() {
                var modal = new bootstrap.Modal(document.getElementById('documentPreviewModal'));
                document.getElementById('documentPreviewModalLabel').textContent = 'Download Complete: ' + documentTitle;
                document.getElementById('documentPreviewContent').innerHTML = '<p class="text-center text-success"><i class="bi bi-check-circle" style="font-size: 3rem;"></i></p><p class="text-center"><strong>' + documentTitle + '</strong></p><p class="text-center text-muted">Document downloaded successfully!</p>';
                modal.show();
            }, 500);
        }
    </script>
}

